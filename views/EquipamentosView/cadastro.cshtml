<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Cadastro de Equipamento</title>
  <link rel="stylesheet" href="~/style.css">
</head>
<body>
  <h1>Cadastrar Equipamento</h1>
  <a href="/EquipamentosView/Index" class="btn">Voltar</a>

  <form id="form-cadastro">
    <input type="text" name="nome" placeholder="Nome" required>
    <input type="text" name="tipo" placeholder="Tipo" required>
    <input type="text" name="marca" placeholder="Marca" required>
    <input type="text" name="modelo" placeholder="Modelo" required>
    <input type="date" name="dataAquisicao" required>
    <input type="text" name="status" placeholder="Status" required>
    <input type="text" name="descricao" placeholder="Descrição">
    <input type="number" name="valor" placeholder="Valor" step="0.01" required>
    <button type="submit">Salvar</button>
  </form>

  <script src="script.js"></script>
  <script>
    document.getElementById('form-cadastro').addEventListener('submit', function(e) {
      e.preventDefault();
      const form = e.target;
      const dados = {
        nome: form.nome.value,
        tipo: form.tipo.value,
        marca: form.marca.value,
        modelo: form.modelo.value,
        dataAquisicao: form.dataAquisicao.value,
        status: form.status.value,
        descricao: form.descricao.value,
        valor: parseFloat(form.valor.value)
      };
      cadastrarEquipamento(dados);
    });
  </script>
</body>
</html>
